<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <Button
        android:id="@+id/playBtn"      android:layout_width="wrap_content"       android:layout_height="wrap_content"        android:layout_centerHorizontal="true"
        android:text="كلية الجزيرة للعلوم الطبية و التكنولوجيا"              android:layout_marginTop="6dp"/>
        
 <Button            android:id="@+id/btnplayvideo"            android:layout_width="200dp"            android:layout_height="wrap_content" 
          android:text="Next Video"           android:layout_gravity="center" 
        android:background="#1E88E5" 
        android:textColor="#ffffff"           android:layout_marginTop="60dp"/>     
      <Button 
           android:id="@+id/btnsource" 
android:layout_width="200dp"            android:layout_height="wrap_content" 
          android:text="Previous"            android:background="#1E88E5"            android:layout_marginTop="100dp"            android:layout_gravity="center" 
           android:textColor="#ffffff"/>                   
         <VideoView
        android:id="@+id/videoView"        android:layout_width="match_parent"
        android:layout_height="300dp"                      android:layout_centerHorizontal="true"       android:layout_centerVertical="true"
 android:layout_marginTop="6dp"           
         />
 
   
 
   
         




</RelativeLayout>