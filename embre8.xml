<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
 android:orientation="vertical"    
    >
    
 <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="كلية الجزيرة للعلوم الطبية و التكنولوجيا Examination" 
       android:layout_marginTop="4dp"
        />
      <Button 
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text=" الرجاء التوقف! لقد انتهيت من أداء الامتحان تمنياتنا لك بالتوفيق. You have finished your Examination.  Please stop. " android:layout_marginTop="6dp"
android:textSize="16sp"        
        />  
        
      <TextClock
            android:id="@+id/textClock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
           android:format12Hour="yyyy: MM:dd:-hh:mm:ss a"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold" />      
  
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result For Histology M2H"
        android:textSize="26sp"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/5"
        android:textSize="26dp"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/totalScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="التراكمي :333"
        android:textSize="26sp"
        android:layout_marginTop="6dp"/>
    
        
         
</LinearLayout>